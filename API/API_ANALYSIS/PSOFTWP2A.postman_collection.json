							"// === Captura JWT para Patient ===",
							"let jsonPatient = pm.response.json();",
							"let tokenPatient = jsonPatient.token;",
							"// Se não vier no body, tenta ler do header",
							"if (!tokenPatient) {",
							"    let hdrPatient = pm.response.headers.get(\"Authorization\") || pm.response.headers.get(\"authorization\");",
							"    tokenPatient = hdrPatient && hdrPatient.split(\" \")[1];",
							"}",
							"console.log(\"✅ Captured JWT Patient:\", tokenPatient);",
							"// Guarda na variável de ambiente 'jwt_patient'",
							"pm.environment.set(\"jwt_patient\", tokenPatient);",
